{
    "name": "dice-poker-standalone",
    "version": "1.0.0",
    "description": "Standalone TypeScript client and AI agent for DicePoker with Flow VRF using Ollama",
    "main": "dist/dice-poker-client.js",
    "scripts": {
        "build": "tsc",
        "start": "ts-node scripts/pvp.ts",
        "agent": "ts-node agent/dealer.ts",
        "dev": "ts-node --watch scripts/pvp.ts",
        "dev:agent": "ts-node --watch agent/dealer.ts",
        "setup": "echo 'Make sure Ollama is installed and running. Run: ollama pull llama3.2:latest'"
    },
    "dependencies": {
        "@langchain/core": "^0.3.61",
        "@langchain/langgraph": "^0.3.5",
        "@langchain/ollama": "^0.2.3",
        "axios": "^1.6.0",
        "dotenv": "^16.3.1",
        "ethers": "^6.8.0",
        "ollama": "^0.5.0"
    },
    "devDependencies": {
        "@types/node": "^20.8.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "keywords": [
        "blockchain",
        "poker",
        "flow",
        "vrf",
        "ai-agent",
        "typescript",
        "ollama",
        "local-llm"
    ],
    "author": "PPwoo",
    "license": "MIT"
}
